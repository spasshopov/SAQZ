<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".OptionsActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/check"
            android:scaleType="centerInside"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SAQZ"
            android:id="@+id/textView6"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#000000"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="46dp"
        android:layout_height="fill_parent"
        android:gravity="top|center_horizontal">

        <Button
            android:id="@+id/buttonCreateQuiz"
            android:text="Create Quiz"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="startCreateQuizActivity"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/buttonTakeQuiz"
            android:text="Take a quiz"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="startStartQuizActivity"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button"
            android:text="Create Question"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="startCreateActivity"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button2"
            android:text="Answer question"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="startAnswerActivity"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button3"
            android:text="User Chart"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="startUserChartActivity"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/button4"
            android:text="Prepare Cache"
            android:textColor="#D1EDCA"
            android:textSize="15sp"
            android:clickable="true"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style_not_clicked"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="prepareForOffline"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</LinearLayout>
